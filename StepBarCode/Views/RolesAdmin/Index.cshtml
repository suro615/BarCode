@model IEnumerable<StepBarCode.Models.ApplicationRole>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <h2>权限列表</h2>

    <p>
        <a class="btn btn-primary btn-sm" onclick="location.href='@Url.Action("Create", "RolesAdmin")'">新建权限</a>&nbsp;&nbsp;
    </p>
    <table class="table table-striped table-hover">
        <tr>
            <th class="col-md-3">
                权限名称
            </th>
            <th class="col-md-6">
                描述
            </th>
            <th class="col-md-3">

            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a class="btn btn-outline btn-sm" href="/RolesAdmin/Details/@item.Id"><span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span> 查看</a>
                    <a class="btn btn-outline btn-sm" href="/RolesAdmin/Edit/@item.Id"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> 编辑</a>
                    <a class="btn btn-outline btn-sm" href="/RolesAdmin/Delete/@item.Id"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span> 删除</a>
                </td>
            </tr>
        }

    </table>
</div>